<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:background="@android:drawable/dialog_holo_light_frame">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="52dp" app:srcCompat="@android:drawable/ic_menu_mylocation" android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp" android:layout_marginTop="40dp" android:scaleType="centerCrop" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="Точка:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/point_uid" android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/textView2" tools:text="9999"/>

    <TextView
            android:text="Широта:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginTop="8dp" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/imageView"/>

    <TextView
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" android:id="@+id/lan" android:layout_marginTop="8dp" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textView4" tools:text="53543535" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Долгота:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginTop="8dp" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView4"/>

    <TextView
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" android:id="@+id/lon" android:layout_marginTop="8dp" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="8dp" tools:text="43543543" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="Дата/время:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8" android:textSize="14sp" app:layout_constraintTop_toTopOf="@+id/date_time" app:layout_constraintEnd_toStartOf="@+id/date_time" android:layout_marginEnd="8dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/date_time" android:textSize="14sp" tools:text="12.12.19 13:32:32" app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>